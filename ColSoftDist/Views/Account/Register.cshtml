@model ColSoftDist.Models.RegisterViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Регистрация";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="body-content">
    <div class="login-content">
        <h2>Регистрация</h2>

        <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div>
                <div>
                    <div class="wrap-label">
                        <label asp-for="Email" id="lbl-reg-email">Введите Email</label><br />
                        <p class="iconicfill-pen-alt2"></p>
                    </div>
                    <input type="text" id="inp-reg-email" asp-for="Email" class="form-control"/>
                    <span asp-validation-for="Email" />
                </div>
                <div>
                    <div class="wrap-label">
                        <label asp-for="Password" id="lbl-reg-pass">Введите пароль</label><br />
                        <p class="iconicfill-pen-alt2"></p>
                    </div>
                    <input asp-for="Password" id="inp-reg-pass" class="form-control"/>
                    <span asp-validation-for="Password" />
                </div>
                <div>
                    <div class="wrap-label">
                        <label asp-for="ConfirmPassword" id="lbl-reg-confirmpass">Повторите пароль</label><br />
                        <p class="iconicfill-pen-alt2"></p>
                    </div>
                    <input asp-for="ConfirmPassword"  id="inp-reg-confirmpass"class="form-control"/>
                    <span asp-validation-for="ConfirmPassword" />
                </div>
                <div>
                    <button type="submit" class="btn-custom" style="width: 25%";>Регистрация</button>
                </div>
            </div>
        </form>
    </div>
</div>

