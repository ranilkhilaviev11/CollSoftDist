@model ColSoftDist.Models.EditUserViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Редактирование пользователя";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="body-content">
    <div class="upload-container">
        <form asp-action="Edit" asp-controller="Users">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
            </div>
            <div class="form-group">
                <div class="wrap-label">
                    <label asp-for="Email" class="control-label" id="lbl-edituser-email">Email</label>
                    <p class="iconicfill-pen-alt2"></p>
                </div>
                <input type="text" asp-for="Email" class="form-control" id="inp-edituser-email"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn-custom" style="padding-left: 5px; padding-right: 5px;" />
            </div>
        </form>
    </div>
</div>

