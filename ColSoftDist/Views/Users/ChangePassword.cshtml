@model ColSoftDist.Models.ChangePasswordViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Изменение пароля";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="body-content ">
    <div class="upload-container">
        <h2>Изменение пароля для пользователя @Model.Email</h2>
        <form asp-action="ChangePassword" asp-controller="Users">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Email" />

            <div class="form-group">
                <div class="wrap-label">
                    <label asp-for="NewPassword" class="control-label" id="lbl-edituser-pass">Новый пароль</label>
                    <p class="iconicfill-pen-alt2"></p>
                </div>
                <input type="text" asp-for="NewPassword" class="form-control" id="inp-edituser-pass"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn-custom" style="padding-left: 5px; padding-right: 5px;" />
            </div>
        </form>
    </div>
    </div>  
