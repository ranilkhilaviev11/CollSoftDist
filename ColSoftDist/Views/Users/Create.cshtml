@model ColSoftDist.Models.CreateUserViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Добавление пользователя";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="body-content">
    <div class="upload-container">
        <form asp-action="Create" asp-controller="Users">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div class="wrap-label">
                    <label asp-for="Email" class="control-label" id="lbl-createuser-email">Email</label>
                    <p class="iconicfill-pen-alt2"></p>
                </div>
                <input type="text" asp-for="Email" class="form-control" id="inp-createuser-email" />
            </div>
            <div class="form-group">
                <div class="wrap-label">
                    <label asp-for="Password" class="control-label" id="lbl-createuser-pass">Пароль</label>
                    <p class="iconicfill-pen-alt2"></p>
                </div>
                <input type="text" asp-for="Password" class="form-control" id="inp-createuser-pass"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn-custom" style="padding-left: 5px; padding-right: 5px;" />
            </div>
        </form>
    </div>
</div>
