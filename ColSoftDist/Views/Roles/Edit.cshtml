@model ColSoftDist.Models.ChangeRoleViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Изменение ролей";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="body-content upload-container">
    <div class="upload-container">
        <h2>Изменение ролей для пользователя @Model.UserEmail</h2>

        <form asp-action="Edit" method="post">
            <input type="hidden" name="userId" value="@Model.UserId" />
            <div class="form-group">
                @foreach (IdentityRole role in Model.AllRoles)
                {
                    <input type="checkbox" name="roles" value="@role.Name"
                           @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />   @role.Name <br />
                    }
            </div>
            <button type="submit" class="btn-custom" style="padding-left: 5px; padding-right: 5px;">Сохранить</button>
        </form>
    </div>
    </div>
